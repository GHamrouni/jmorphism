<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jmorphism" default="compile.module.jmorphism">
  <dirname property="module.jmorphism.basedir" file="${ant.file.module_jmorphism}"/>
  
  <property name="module.jdk.home.jmorphism" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jmorphism" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jmorphism" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jmorphism" value="${compiler.args}"/>
  
  <property name="jmorphism.output.dir" value="${module.jmorphism.basedir}/out/production/JMorphism"/>
  <property name="jmorphism.testoutput.dir" value="${module.jmorphism.basedir}/out/test/JMorphism"/>
  
  <path id="jmorphism.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jmorphism.module.production.classpath">
    <path refid="${module.jdk.classpath.jmorphism}"/>
    <pathelement location="${basedir}/libs/aparapi/aparapi.jar"/>
  </path>
  
  <path id="jmorphism.runtime.production.module.classpath">
    <pathelement location="${jmorphism.output.dir}"/>
    <pathelement location="${basedir}/libs/aparapi/aparapi.jar"/>
  </path>
  
  <path id="jmorphism.module.classpath">
    <path refid="${module.jdk.classpath.jmorphism}"/>
    <pathelement location="${jmorphism.output.dir}"/>
    <pathelement location="${basedir}/libs/aparapi/aparapi.jar"/>
  </path>
  
  <path id="jmorphism.runtime.module.classpath">
    <pathelement location="${jmorphism.testoutput.dir}"/>
    <pathelement location="${jmorphism.output.dir}"/>
    <pathelement location="${basedir}/libs/aparapi/aparapi.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.jmorphism">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jmorphism">
    <patternset refid="excluded.from.module.jmorphism"/>
  </patternset>
  
  <path id="jmorphism.module.sourcepath">
    <dirset dir="${module.jmorphism.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jmorphism" depends="compile.module.jmorphism.production,compile.module.jmorphism.tests" description="Compile module JMorphism"/>
  
  <target name="compile.module.jmorphism.production" depends="register.custom.compilers" description="Compile module JMorphism; production classes">
    <mkdir dir="${jmorphism.output.dir}"/>
    <javac2 destdir="${jmorphism.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jmorphism}/javac">
      <compilerarg line="${compiler.args.jmorphism}"/>
      <bootclasspath refid="jmorphism.module.bootclasspath"/>
      <classpath refid="jmorphism.module.production.classpath"/>
      <src refid="jmorphism.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jmorphism"/>
    </javac2>
    
    <copy todir="${jmorphism.output.dir}">
      <fileset dir="${module.jmorphism.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jmorphism.tests" depends="register.custom.compilers,compile.module.jmorphism.production" description="compile module JMorphism; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jmorphism" description="cleanup module">
    <delete dir="${jmorphism.output.dir}"/>
    <delete dir="${jmorphism.testoutput.dir}"/>
  </target>
</project>